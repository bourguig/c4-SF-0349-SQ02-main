{% extends 'base.html.twig' %}

{% block title %}Satisfaction index{% endblock %}

{% block body %}
    <h1>Satisfaction index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Rating</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for satisfaction in satisfactions %}
            <tr>
                <td>{{ satisfaction.id }}</td>
                <td>{{ satisfaction.rating }}</td>
                <td>
                    <a href="{{ path('app_satisfaction_show', {'id': satisfaction.id}) }}">show</a>
                    <a href="{{ path('app_satisfaction_edit', {'id': satisfaction.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_satisfaction_new') }}">Create new</a>
{% endblock %}
